<%- include('../partials/html-head') %> <%- include('../partials/nav') %>

<main>
  <form action="/plants" method="post" enctype="multipart/form-data">
    <label for="image">Upload image</label>
    <input
      type="file"
      class="form-control-file"
      name="image"
      id="image"
      required
    />

    <label for="plantName">Name: </label>
    <input type="text" name="name" id="plantName" required />

    <label for="scientificName">Scientific Name: </label>
    <input type="text" name="scientificName" id="scientificName" required />

    <label for="classification">Type: </label>
    <select name="type" id="classification">
      <% types.sort((a,b) => a > b ? 1 : -1).forEach(type => { %>
      <option value="<%= type %>"><%= type %></option>
      <% }) %>
    </select>

    <button type="submit">Add Plant</button>
  </form>
</main>

