<body>
  <nav>
    
    <% if (user?.profile.username) { %>

      
      <form class="nav-item profile-link" action="/profiles/<%= user?.profile.username %>" method="get">
        <button type="submit" title="View Profile"><img src="<%= user?.profile.avatar %>" alt="avatar"></button>
      </form>

      <a id="logo" class="nav-item" href="/" title="home">plantra</a>
