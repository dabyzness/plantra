          <i class="fas fa-solid fa-plus"></i>
        </a>
        <a class="nav-item" href="/profiles/<%= user.profile.username %>/calendar"><i class="fas fa-solid fa-calendar-check"></i></a>

      <a class="nav-item" href="/plants/new"><i class="fas fa-solid fa-leaf"></i></a>
      <a class="nav-item" href="/auth/logout" class="right">
        <button type="submit"><i class="fas fa-solid fa-door-open"></i></button>
      </a>
    <% } else { %>
      <a id="logo" class="nav-item" href="/">plantra</a>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
