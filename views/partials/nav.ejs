  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <% if (user) { %>

      <form action="/profiles/<%= user?.profile.username %>" method="get">
        <button type="submit"><img src="<%= user?.profile.avatar %>" alt="avatar"></button>
      </form>
      <!-- <img src="<%= //user?.profile.avatar %>" alt="avatar">
      <a href="/profiles/<%= //user?.profile.username %>"><%= //user?.profile.username %> </a> -->

      <a href="/plants/new">ADD PLANT</a>
      <a href="/auth/logout" class="right">
        <button type="submit">Logout</button>
      </a>
    <% } else { %>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
        data-login_uri="/auth/google"
        data-auto_prompt="false"
      ></div>
      <div 
        class="g_id_signin right"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left"
      ></div>
    <% } %>
  </nav>
